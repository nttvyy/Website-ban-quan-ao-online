@model IEnumerable<Shopping.Models.Material1>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách chất liệu</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Tên chất liệu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID_Material }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID_Material }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID_Material })
        </td>
    </tr>
}

</table>
