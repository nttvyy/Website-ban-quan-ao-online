                        </div>

                        <div class="clearfix">
                            <label for="email"><span>Email:</span></label>
                            <div class="input">
                                <input tabindex="2" size="25" id="email" name="MailFeedback" type="text" class="input-xlarge" placeholder="">
                            </div>
                        </div>

                        <div class="clearfix">
                            <label for="message"><span>Lời nhắn:</span></label>
                            <div class="input">
                                <textarea tabindex="2" size="25" id="message" name="Motafeedback" type="text" class="input-xlarge" placeholder=""></textarea>
                                @*<textarea tabindex="3" class="input-xlarge" id="message" name="body" rows="7" placeholder=""></textarea>*@
                            </div>
                        </div>

                        <div class="actions">
                            <button tabindex="3" type="submit" class="btn btn-inverse">Gửi lời nhắn</button>
                        </div>
                    </fieldset>
                </form>
            }
