@using Shopping.Models;
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<section class="header_text sub">
    <h4 style="color: #fd4004;"><span>Tin tức khuyến mãi</span></h4>
</section>
<section class="main-content">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="span4">
                <a href="#" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="@Url.Content(item.Image)"></a>
            </div>
            <div class="span5">
                <address>
                    <h4><strong>@item.Title </strong></h4> <br><span>@item.Description</span><br>
                </address>
            </div>
        </div>
    }
    </section>


