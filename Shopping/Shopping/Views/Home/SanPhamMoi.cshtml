@using Shopping.Models;
@{
    ViewBag.Title = "SanPhamMoi";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    List<Product> listTrangSanPhamMoi = ViewBag.TrangSanPhamMoi;
}
<section class="main-content">
    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span12">
                    <h4 class="title">
                        <span class="pull-left"><span class="text"><span class="line">Sản phẩm <strong>mới nhất</strong></span></span></span>
                        <span class="pull-right">
                            <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
                        </span>
                    </h4>
                        <div id="myCarousel" class="myCarousel carousel slide">
                            <div class="carousel-inner">
                                <div class="active item">
                                    @foreach (var item in listTrangSanPhamMoi)
                                    {
                                        <ul class="thumbnails">
                                            <li class="span3">
                                                <div class="product-box">
                                                    <span class="sale_tag"></span>
                                                    <a style="font-size:15px;" href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })">
                                                        <img title=" " alt=" " src="@Url.Content(item.Image)" />
                                                    </a>
                                                    <a class="title"><strong>@item.ProductName</strong></a><br />
                                                    @*<a class="category">@item.ProductCategory</a><br />*@
                                                    <p class="price">@item.Price,000 VNĐ</p>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>                   
                </div>
            </div>
        </div>
    </div>
</section>










