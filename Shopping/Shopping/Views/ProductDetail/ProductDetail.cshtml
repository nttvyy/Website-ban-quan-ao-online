@using Shopping.Models;
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    List<Product> listTrangSanPhamMoi = ViewBag.SanPhamMoi;
    List<Product> listCoTheBanThich = ViewBag.CoTheBanThich;
    List<Product> listSPBC = ViewBag.SanPhamBC;
}
<section class="header_text sub">
    <h4 style="color: #fd4004;"><span>Chi tiết sản phẩm</span></h4>
</section>
<section class="main-content">
    <div class="row">
        <div class="span9">
            <div class="row">
                <div class="span4">
                    <a href="@Url.Content(Model.Image)" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="@Url.Content(Model.Image)"></a>
                </div>
                <div class="span5">
                    <address>
                        <strong style="font-size:12px;">TÊN SẢN PHẨM: </strong><span style="color: #fd4004;"><strong style="font-size:17px;">@Model.ProductName</strong></span><br>
                    </address>
                    <h4><strong style="font-size:12px;">GIÁ:</strong> @Model.Price,000 VNĐ</h4>
                </div>
                <div class="span5">
                    <form class="form-inline">
                        <label>SỐ LƯỢNG:</label>
                        <input type="text" class="span1" placeholder="1">
                        <a href="/Cart/addtocart/@Model.ProductID/" class="btn btn-inverse" type="submit"> Thêm vào giỏ hàng </a>
                    </form>
                </div>
            </div>
            <div class="row">
                <div style="padding-top:40px;" class="span9">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a href="#home">MÔ TẢ SẢN PHẨM</a></li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">@Model.Description</div>
                    </div>
                </div>
                <div class="span9">
                    <br>
                    <h4 class="title">
                        <span class="pull-left"><span class="text"><strong>SẢN PHẨM</strong> LIÊN QUAN </span></span>
                        <span class="pull-right">
                            
                        </span>
                    </h4>
                    <div style="padding-top: 50px;" id="myCarousel-1" class="carousel slide">
                        <div class="carousel-inner">
                           <div class="active item">
                                @foreach (var item in listSPBC)
                                {
                                    <ul class="thumbnails listing-products">
                                        <li class="span3">
                                            <div class="product-box">
                                                <span class="sale_tag"></span>
                                                <a style="font-size:15px;" href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })">
                                                    <img alt="" src="@Url.Content(item.Image)">
                                                </a><br />
                                                <a class="title"><strong>@item.ProductName</strong></a><br />
                                                <p class="price">@item.Price,000 VNĐ</p>
                                            </div>
                                        </li>
                                    </ul>
                                }
                            </div> 
                            <div class="item">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="span3 col">
            <div class="block">
                <h4 class="title"><strong>Có thể</strong> Bạn thích</h4>
                @foreach (var item in listCoTheBanThich)
                {
                    <ul class="small-product">
                        <li>
                            <a href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })" title="">
                                <img src="@Url.Content(item.Image)" alt="">
                            </a>
                            <a href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })">@item.ProductName</a>
                        </li>
                    </ul>
                }
            </div>
            <div class="block">
                <h4 class="title"><strong>Sản phẩm </strong>mới nhất</h4>
                @foreach (var item in listTrangSanPhamMoi)
                {
                    <ul class="small-product">
                        <li>
                            <a href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })" title="">
                                <img src="@Url.Content(item.Image)" alt="">
                            </a>
                            <a href="@Url.Action("ProductDetail", "ProductDetail", new { id = item.ProductID })">@item.ProductName</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</section>

